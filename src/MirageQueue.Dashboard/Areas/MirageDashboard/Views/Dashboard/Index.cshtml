@{
    ViewData["Title"] = "Dashboard Overview";
}

<!-- Stats Section -->
<div id="dashboard-stats" 
     hx-get="/mirage-dashboard/stats" 
     hx-trigger="load, every 5s" 
     hx-indicator=".stats-indicator"
     class="mb-5">
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary stats-indicator" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="mb-5">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center mb-4">
        <div>
            <h2 class="h3 fw-bold mb-2">Quick Actions</h2>
            <p class="text-muted">Navigate to different message types</p>
        </div>
        <div class="d-flex flex-wrap gap-2 mt-3 mt-lg-0">
            <a href="/mirage-dashboard/messages?type=inbound" class="btn btn-outline-primary">
                <i class="fas fa-inbox me-2"></i>Inbound
            </a>
            <a href="/mirage-dashboard/messages?type=outbound" class="btn btn-outline-success">
                <i class="fas fa-paper-plane me-2"></i>Outbound
            </a>
            <a href="/mirage-dashboard/messages?type=scheduled" class="btn btn-outline-info">
                <i class="fas fa-clock me-2"></i>Scheduled
            </a>
        </div>
    </div>
    
    <div class="row g-4">
        <!-- Inbound Messages Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-primary bg-opacity-10 text-primary mx-auto">
                        <i class="fas fa-inbox fs-2"></i>
                    </div>
                    <h5 class="card-title h4">Inbound Messages</h5>
                    <p class="card-text text-muted mb-4">Messages received and queued for processing</p>
                    <a href="/mirage-dashboard/messages?type=inbound" class="btn btn-primary">
                        <i class="fas fa-eye me-2"></i>View All
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Outbound Messages Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-success bg-opacity-10 text-success mx-auto">
                        <i class="fas fa-paper-plane fs-2"></i>
                    </div>
                    <h5 class="card-title h4">Outbound Messages</h5>
                    <p class="card-text text-muted mb-4">Messages being processed and sent to consumers</p>
                    <a href="/mirage-dashboard/messages?type=outbound" class="btn btn-success">
                        <i class="fas fa-eye me-2"></i>View All
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Scheduled Messages Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-circle bg-info bg-opacity-10 text-info mx-auto">
                        <i class="fas fa-clock fs-2"></i>
                    </div>
                    <h5 class="card-title h4">Scheduled Messages</h5>
                    <p class="card-text text-muted mb-4">Messages scheduled for future processing</p>
                    <a href="/mirage-dashboard/messages?type=scheduled" class="btn btn-info">
                        <i class="fas fa-eye me-2"></i>View All
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- System Status -->
<div class="alert alert-info d-flex align-items-center shadow-sm">
    <i class="fas fa-info-circle me-3 fs-5"></i>
    <div>
        <h6 class="alert-heading mb-1">System Status</h6>
        <small>Dashboard auto-refreshes every 5 seconds â€¢ Last updated: <span id="last-updated">Loading...</span></small>
    </div>
</div>

<script>
    // Update timestamp
    function updateTimestamp() {
        document.getElementById('last-updated').textContent = new Date().toLocaleTimeString();
    }
    
    // Update on page load and HTMX updates
    updateTimestamp();
    document.body.addEventListener('htmx:afterSwap', function(evt) {
        if (evt.detail.target.id === 'dashboard-stats') {
            updateTimestamp();
        }
    });
</script>