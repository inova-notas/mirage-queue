@model DashboardStatsViewModel

<div class="row g-4">
    <!-- Inbound Messages Stats -->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-inbox fs-2 text-primary me-3"></i>
                    <div>
                        <h6 class="card-subtitle mb-1 text-muted">Inbound Messages</h6>
                        <h3 class="mb-0 text-primary">@Model.TotalInboundMessages</h3>
                    </div>
                </div>
                <div class="d-flex flex-wrap gap-2">
                    <span class="badge bg-success">@Model.NewInboundMessages New</span>
                    <span class="badge bg-warning">@Model.QueuedInboundMessages Queued</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Outbound Messages Stats -->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-paper-plane fs-2 text-success me-3"></i>
                    <div>
                        <h6 class="card-subtitle mb-1 text-muted">Outbound Messages</h6>
                        <h3 class="mb-0 text-success">@Model.TotalOutboundMessages</h3>
                    </div>
                </div>
                <div class="d-flex flex-wrap gap-2">
                    <span class="badge bg-info">@Model.NewOutboundMessages New</span>
                    <span class="badge bg-warning">@Model.ProcessingOutboundMessages Processing</span>
                    <span class="badge bg-success">@Model.ProcessedOutboundMessages Processed</span>
                    @if (Model.FailedOutboundMessages > 0)
                    {
                        <span class="badge bg-danger">@Model.FailedOutboundMessages Failed</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Scheduled Messages Stats -->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-clock fs-2 text-info me-3"></i>
                    <div>
                        <h6 class="card-subtitle mb-1 text-muted">Scheduled Messages</h6>
                        <h3 class="mb-0 text-info">@Model.TotalScheduledMessages</h3>
                    </div>
                </div>
                <div class="d-flex flex-wrap gap-2">
                    <span class="badge bg-info">@Model.WaitingScheduledMessages Waiting</span>
                    <span class="badge bg-warning">@Model.QueuedScheduledMessages Queued</span>
                </div>
            </div>
        </div>
    </div>
</div>